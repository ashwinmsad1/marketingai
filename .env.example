# Enhanced Viral Engine Configuration
# Copy this file to .env and fill in your actual API keys

# =============================================================================
# CORE APIS (Required for basic functionality)
# =============================================================================

# Google AI (Gemini) for image generation
GOOGLE_API_KEY=your_google_api_key_here

# =============================================================================
# ENHANCED VIRAL ENGINE APIs
# =============================================================================

# Claude LLM API for content curation and intelligent analysis
# Sign up at: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Reddit API for trending topic detection
# Create app at: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here

# YouTube Data API for trending video analysis
# Get key at: https://console.developers.google.com/
YOUTUBE_API_KEY=your_youtube_api_key_here

# =============================================================================
# LEGACY APIs (Optional - kept for backwards compatibility)
# =============================================================================

# News API (Optional - for additional trend sources)
NEWS_API_KEY=your_news_api_key_here

# Twitter API (Optional - currently not implemented)
TWITTER_API_KEY=your_twitter_api_key_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database
DATABASE_URL=postgresql://username:password@localhost:5432/marketingai

# =============================================================================
# VIRAL ENGINE SETTINGS
# =============================================================================

# Rate limiting settings (requests per minute)
REDDIT_RATE_LIMIT=60
YOUTUBE_RATE_LIMIT=100
CLAUDE_RATE_LIMIT=50
GOOGLE_TRENDS_RATE_LIMIT=10

# Caching settings (in seconds)
TREND_CACHE_TTL=1800  # 30 minutes
CONTENT_CACHE_TTL=3600  # 1 hour

# Data source weights (for trend scoring)
REDDIT_WEIGHT=0.30
YOUTUBE_WEIGHT=0.25
GOOGLE_TRENDS_WEIGHT=0.25
WEB_SCRAPING_WEIGHT=0.20

# Content safety thresholds
MIN_SAFETY_SCORE=70
MIN_RELEVANCE_SCORE=60

# =============================================================================
# WEB SCRAPING SETTINGS
# =============================================================================

# User agent for web scraping (be respectful)
WEB_SCRAPER_USER_AGENT=ViralEngine/1.0 (+https://yourwebsite.com/contact)

# Scraping delays (in seconds)
SCRAPER_MIN_DELAY=2
SCRAPER_MAX_DELAY=5

# =============================================================================
# FACEBOOK/META INTEGRATION
# =============================================================================

# Facebook Business API (for campaign deployment)
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token_here

# =============================================================================
# OTHER SETTINGS
# =============================================================================

# Environment
ENV=development  # or production

# Logging level
LOG_LEVEL=INFO

# Application settings
SECRET_KEY=your_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Payment settings (for subscriptions)
RAZORPAY_KEY_ID=your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here